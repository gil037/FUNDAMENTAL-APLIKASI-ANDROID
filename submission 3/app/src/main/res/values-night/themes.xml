<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseTheme.GithubUser" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">?attr/isLightTheme</item>
        <item name="android:navigationBarColor">?attr/isLightTheme</item>
        <item name="editTextStyle">?attr/isLightTheme</item>
        <item name="materialButtonStyle">@style/Widget.Primary.MyButton</item>
    </style>

    <style name="AppTheme.GithubUser" parent="BaseTheme.GithubUser"/>

    <!-- App Theme Splash Screen -->
    <style name="AppTheme.GithubUser.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/isLightTheme</item>
        <item name="android:navigationBarColor">?attr/isLightTheme</item>
    </style>

</resources>